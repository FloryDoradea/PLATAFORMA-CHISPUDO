<!doctype html>
<html lang="en">

  <!-- Content Start -->
<div class="content">
  <body>

    <%- include('partials/header') %>

    <!-- Incluir Bootstrap CSS (si no lo tienes ya) -->
 
    <!-- Incluir el CSS de Bootstrap Datepicker -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">

    <!-- Incluir jQuery (requerido por Bootstrap Datepicker) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Incluir el JS de Bootstrap Datepicker -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>


    <div class="Container mt-4">
        <div class="cardchisp border-secondary">
            <div align="center" style="color: #191C24" class="card-headerChisp"><b>NUEVO CUPON</b></div>

            <div class="card-body">
                <form action ="/savecupon" method ="POST">
                    <div class="mb-3">
                        <label for ="fechainicio" class="form-label">Fecha Inicio</label>
                        <input type="text" class="form-control" id="fechainicio" name="fechainicio" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for ="fechafin" class="form-label">Fecha Fin</label>
                        <input type="text" class="form-control" id="fechafin" name="fechafin" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for ="monto" class="form-label">Monto</label>
                        <input type="number" step="0.01" min="0.01" class="form-control" id="monto" name="monto"  tabindex="1" required>
                    </div>

                     <label for ="descripcion" class="form-label">Descripcion</label>                    
                    <div class="input-group mb-3">                      
                        <input type="text" class="form-control" placeholder="descripcion" tabindex="1" id="descripcion" name="descripcion" required >
                    </div>
  
                    <label for ="estado" class="form-label">Estado cupon</label>
                    <div class="mb-3">
                        <select class="form-select" id="estado" name="estado" tabindex="1" aria-label="Floating label select example" required>
                            <option selected>Abrir el menu de seleccion</option>
                            <option value="activo">Activo</option> 
                        </select>
                    </div>

                    <label for ="file" class="form-label">Suba una fotografia</label>
                    <div class=" ">
                        <div class="bg-secondary rounded h-100 p-4">     
                            <div class="mb-3">
                                <input class="form-control bg-dark" type="file" id="imagencupon" name="imagencupon">
                            </div>
                        </div>
                    </div>  
                    <input id="usuario" name ="usuario" value="FDORADEA" hidden>
                    <br>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>  
                    <a href="/index" class="btn btn-white">Cancelar</a>
                </form>
            </div>
            <!-- Activar el calendario en los campos de fecha -->
            <script>
               $('#fechainicio').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true,
                    startDate: 'today'  // Solo permite seleccionar fechas a partir de hoy
                });

                $('#fechafin').datepicker({
                    format: 'yyyy-mm-dd',
                    autoclose: true,
                    startDate: 'today'  // Solo permite seleccionar fechas a partir de hoy
                });
            </script>

        </div>
    </div>
  </body>
</div>
<!-- Content End -->
</html>