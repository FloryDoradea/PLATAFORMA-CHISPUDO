<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="assets/cssLOGIN/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/cssLOGIN/css/font-awesome.min.css"  rel="stylesheet">
    <link href="assets/cssLOGIN/css/style.css"  rel="stylesheet">

    <title>Login</title>
  </head>
<body>
    <section class="form-02-main">
        <div class="container">
            <div class="col-md-15">
                <div class="_lk_de">
                    <form action = "auth" method="POST">
                        <div class="form-03-main">
                            <div class="logo"><img src="assets/cssLOGIN/images/user.png"></div>
                                <div class="row">
                                    
                                    <div class="form-group">
                                        <input type="text" name="user" id="user" class="form-control _ge_de_ol" type="text" placeholder="Ingresar usuario"   aria-required="true">
                                    </div>

                                    <div class="form-group">
                                        <input type="password" name="pass" id="pass"  class="form-control _ge_de_ol" type="text" placeholder="Ingresar Password"   aria-required="true">
                                    </div>

                                    <div class="checkbox form-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="">
                                            <label class="form-check-label" for="">Remember me</label>
                                        </div>
                                        <a href="#">Forgot Password</a>
                                    </div>

                                    <div class="form-group">
                                        <div class="_btn_04">
                                            <!--<button type="button" class="btn btn-dark btn-lg btn-block">INGRESAR</button>-->
                                            <input type ="submit" class="btn btn-dark btn-lg btn-block" value = "login">
                                        </div>
                                    </div>
                                    <a href="register" class ="btn-reister">Registrar</a>

                                    <div class="form-group nm_lk"><p>Or Login With</p></div>

                                    <div class="form-group pt-0">
                                        <div class="_social_04">
                                            <ol>
                                                <li><i class="fa fa-facebook"></i></li>
                                                <li><i class="fa fa-twitter"></i></li>
                                                <li><i class="fa fa-google-plus"></i></li>
                                                <li><i class="fa fa-instagram"></i></li>
                                                <li><i class="fa fa-linkedin"></i></li>
                                            </ol>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </form> 
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!--usuando SWEETALERTER2 CON CDN -->
      <% if(typeof alert != "undefined"){ %>  <!--aca controlamos con js que el ALERT sea distinto que undefined-->      
        <!--estos son los parametros que se reciven app.ejs, punto 10,  app.post('/register', async(req,res)=>{ -->
        <script>
            swal.fire({                     
                title: '<%= alertTitle %>',
                text:  '<%= alertMessage %>',
                icon:  '<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            }).then(()=>{ 
                window.location= '/<%= ruta %>'
            })
        </script>
        <% } %>
        
</body>
</html>

