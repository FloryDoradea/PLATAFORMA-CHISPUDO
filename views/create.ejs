<!doctype html>
<html lang="en">

  <!-- Content Start -->
<div class="content">
  <body>

    <%- include('partials/header') %>

    <div class="Container mt-4">
        <div class="cardchisp border-secondary">
            <div align="center" style="color: #191C24" class="card-headerChisp"><b>NUEVO REGISTRO</b></div>

            <div class="card-body">
                <form action ="/save" method ="POST">
                    <div class="mb-3">
                        <label for ="user" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="user" name="user" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for ="name" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="name" name="name" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for ="lastname" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" tabindex="1" required>
                    </div>
                    <div class="mb-3">
                        <label for ="email" class="form-label">E-mail</label>
                        <input type="text" class="form-control" id="email" name="email" tabindex="1" required>
                    </div>

                     <label for ="" class="form-label">Telefonos</label>
                     
                    <div class="input-group mb-3">                      
                        <input type="text" class="form-control" placeholder="Telefono 1" tabindex="1" id="phone1" name="phone1" required >

                        <span class="input-group-text"></span>                    
                         
                        <input type="text" class="form-control" placeholder="Telefono 2" tabindex="1" id="phone2" name="phone2" required >
                    </div>
 
  
                    <label for ="roles" class="form-label">Rol del usuario</label>
                    <div class="mb-3">
                        <select class="form-select" id="roles" name="roles" tabindex="1" aria-label="Floating label select example" required>
                            <option selected>Abrir el menu de seleccion</option>
                            <option value="admin">Administrador</option>
                            <option value="dataentry">Solo reportes</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for ="passwordTemporary" class="form-label">Password</label>
                        <input type="text" class="form-control" id="passwordTemporary" name="passwordTemporary" tabindex="1">
                    </div>

                    <label for ="file" class="form-label">Suba una fotografia</label>
                    <div class=" ">
                        <div class="bg-secondary rounded h-100 p-4">     
                            <div class="mb-3">
                                <input class="form-control bg-dark" type="file" id="formFile">
                            </div>
                        </div>
                    </div>

                    <br>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>  
                    <a href="/index" class="btn btn-white">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
  </body>
</div>
<!-- Content End -->
</html>